                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="평일 09:30 ~ 20:00"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold" />

